<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chart_Modeller"
      xmlns:hc="https://handyorg.github.io/handycontrol" xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf" x:Class="Chart_Modeller.CreateChartsPage"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1440"
      Title="CreateChartsPage" Loaded="Page_Loaded">

    <Grid>
        <DataGrid x:Name="dataGrid" VerticalAlignment="Top" HorizontalAlignment="Center" Width="800" MaxHeight="400" Margin="0,100,0,0"/>
        <ComboBox x:Name="tablesBox" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="200" DisplayMemberPath="TABLE_NAME" SelectedValuePath="TABLE_NAME"  Margin="0,0,0,20" SelectionChanged="tablesBox_SelectionChanged" />
        <hc:CheckComboBox x:Name="columnsBox" HorizontalAlignment="Right" VerticalAlignment="Top"  Margin="0,110,50,0" Width="200" SelectedIndex="-1"/>
        <lvc:CartesianChart x:Name="chart" Width="800" Height="300" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="0,0,0,100"/>
        <Button VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,40,40" Click="Button_Click" Panel.ZIndex="1">Нажать</Button>
    </Grid>
</Page>
