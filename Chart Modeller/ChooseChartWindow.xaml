<Window x:Class="Chart_Modeller.ChooseChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chart_Modeller"
        mc:Ignorable="d"
        Title="ChooseChartWindow" Height="512" Width="720" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock Text="Тип диаграммы" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,40,0,0" FontSize="25"/>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Center" Margin="30,80,0,0">
            <Button Margin="30" Width="170" Height="150" >
                <StackPanel>
                    <Image Source="Images/lineSeries.jpg"/>
                    <TextBlock HorizontalAlignment="Center">Blablabla</TextBlock>
                </StackPanel>
            </Button>
            <Button Margin="30" Width="170" Height="150" >
                <StackPanel>
                    <Image Source="Images/heatSeries.jpg"/>
                    <TextBlock HorizontalAlignment="Center">Blablabla</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,80,0,0">
            <Button Margin="30" Width="170" Height="150" >
                <StackPanel>
                    <Image Source="Images/columnSeries.jpg"/>
                    <TextBlock HorizontalAlignment="Center">Blablabla</TextBlock>
                </StackPanel>
            </Button>
            <Button Margin="30" Width="170" Height="150" >
                <StackPanel>
                    <Image Source="Images/pieSeries.jpg" Width="120"/>
                    <TextBlock HorizontalAlignment="Center">Blablabla</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
        <StackPanel HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,80,30,0">
            <Button Margin="30" Width="170" Height="150">
                <StackPanel>
                    <Image Source="Images/stackSeries.jpg" Height="90"/>
                    <TextBlock HorizontalAlignment="Center">Blablabla</TextBlock>
                </StackPanel>
            </Button>
            <Button Margin="30" Width="170" Height="150" >
                <StackPanel>
                    <Image Source="Images/angulargaugeSeries.jpg" Width="100"/>
                    <TextBlock HorizontalAlignment="Center">Blablabla</TextBlock>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
