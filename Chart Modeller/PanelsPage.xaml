<Page x:Class="Chart_Modeller.PanelsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chart_Modeller"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1400"
      Title="PanelsPage">

    <Grid>
        <TextBlock TextAlignment="Center" VerticalAlignment="Top" Margin="0,100,0,0" FontSize="35">Панели</TextBlock>
        <Button x:Name="addPanel" HorizontalAlignment="Right" VerticalAlignment="Center" Width="200" Height="50" Click="addPanel_Click" FontSize="20">Новая панель</Button>
        <StackPanel x:Name="sp" VerticalAlignment="Center">
        </StackPanel>
        <ComboBox x:Name="dbBox" VerticalAlignment="Bottom" Width="200" Margin="0,0,0,30" DisplayMemberPath="name"/>
    </Grid>
</Page>
