<Page x:Class="Chart_Modeller.PanelsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Chart_Modeller"
      mc:Ignorable="d" 
      d:DesignHeight="1024" d:DesignWidth="1400"
      Title="PanelsPage" Loaded="Page_Loaded">

    <Grid>
        <ScrollViewer Margin="0,50,0,105">
            <StackPanel x:Name="sp" Orientation="Vertical"/>
        </ScrollViewer>
        <Button x:Name="addPanel" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="50" Height="50" Click="addPanel_Click" FontSize="20" Margin="15,0,0,10">+</Button>
        <ComboBox x:Name="dbBox" VerticalAlignment="Bottom" Width="200" Margin="0,0,0,20" DisplayMemberPath="name"/>
    </Grid>
</Page>
