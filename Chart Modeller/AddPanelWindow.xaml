<Window xmlns:hc="https://handyorg.github.io/handycontrol"  x:Class="Chart_Modeller.AddPanelWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Chart_Modeller"
        mc:Ignorable="d"
        Title="Chart Modeller" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,80,0,0" Text="Название панели" FontSize="35"/>
        <TextBox x:Name="panelNameTxt" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300" Height="60" FontSize="30" MaxLength="50"/>
        <Button x:Name="okButton" VerticalAlignment="Bottom" HorizontalAlignment="Center" Width="300" Height="50" Margin="0,0,0,50" FontSize="30" Click="okButton_Click" Foreground="#131C26">Создать</Button>
    </Grid>
</Window>
